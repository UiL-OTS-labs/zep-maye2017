{
    if      (selected_group == D_L1) {
        prepare_fam_bimodal();
    }
    else if (selected_group == D_L2) {
        prepare_fam_unimodal();
    }
    else if (selected_group == C_L1) {
        prepare_fam_unimodal();
    }
    else { // selected_group == C_L2) 
        prepare_fam_bimodal();
    }
    fam_items.shuffle(0, -1);
}


